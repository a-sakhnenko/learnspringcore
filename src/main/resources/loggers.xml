<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    <bean id="eventLogger" class="spring.core.loggers.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="spring.core.loggers.FileEventLogger" init-method="init">
        <constructor-arg value="tempLogFile"/>
    </bean>

    <bean id="cacheFileEventLogger" class="spring.core.loggers.CacheFileEventLogger" parent="fileEventLogger"
          destroy-method="destroy">
        <constructor-arg value="2"/>
        <constructor-arg>
            <bean class="java.util.ArrayList"/>
        </constructor-arg>
    </bean>
</beans>